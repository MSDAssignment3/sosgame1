<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SeekBar
        android:id="@+id/seekX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/seek_bg_fill" />

    <SeekBar
        android:id="@+id/seekY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seekX"
        android:background="@drawable/seek_bg_fill" />

    <SeekBar
        android:id="@+id/seekZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seekY"
        android:background="@drawable/seek_bg_fill" />

    <SeekBar
        android:id="@+id/seekPanX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seekZ"
        android:background="@drawable/seek_bg_fill" />

    <SeekBar
        android:id="@+id/seekPanY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seekPanX"
        android:background="@drawable/seek_bg_fill" />

</RelativeLayout>